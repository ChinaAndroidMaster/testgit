<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp" >

    <com.creditease.checkcars.ui.widget.CircleImageView
        android:id="@+id/mine_access_item_topicicon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/mine_image_default"
        app:border_color="@color/color_mine_divider"
        app:border_overlay="true"
        app:border_width="0dp" />

    <TextView
        android:id="@+id/mine_access_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@+id/mine_access_item_topicicon"
        android:layout_toRightOf="@+id/mine_access_item_topicicon"
        android:singleLine="true"
        android:textColor="@color/color_mine_name"
        android:textSize="16sp" />

    <RatingBar
        android:id="@+id/mine_access_item_ratingbar"
        style="@style/topicRatingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_access_item_name"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@+id/mine_access_item_topicicon"
        android:layout_toRightOf="@+id/mine_access_item_topicicon"
        android:numStars="5"
        android:rating="5" />

    <TextView
        android:id="@+id/mine_access_item_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mine_access_item_ratingbar"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/mine_access_item_topicicon"
        android:layout_toRightOf="@+id/mine_access_item_topicicon"
        android:singleLine="false"
        android:textColor="@color/color_mine_profession"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mine_access_item_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/mine_access_item_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/mine_access_item_name"
        android:singleLine="true"
        android:textColor="@color/color_mine_image_bg"
        android:textSize="14sp" />

</RelativeLayout>