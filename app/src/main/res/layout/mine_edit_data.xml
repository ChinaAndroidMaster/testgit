<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
     <include android:id="@+id/headerLayout" layout="@layout/include_header_tv"/>
     <RelativeLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:background="@color/white"
         android:layout_below="@+id/headerLayout"
         android:minHeight="50dp"
         android:layout_marginTop="10dp"
         >
         <!-- 师傅宣言布局 -->
         <TextView 
             android:id="@+id/fatherwordtitle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/str_mine_fatherword_title"
             android:textSize="16sp"
             android:textColor="@color/color_mine_name"
             android:layout_alignParentLeft="true"
             android:singleLine="true"
             android:layout_alignParentStart="true"
             android:minHeight="50dp"
             android:layout_marginLeft="10dp"
             android:layout_marginStart="10dp"
             android:gravity="center_vertical"
             />
         <EditText
             android:id="@+id/mine_edit_fatherword"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:textSize="14sp"
             android:textColor="@color/color_mine_profession"
             android:layout_toRightOf="@id/fatherwordtitle"
             android:layout_toEndOf="@id/fatherwordtitle"
             android:layout_centerVertical="true"
             android:hint="@null"
             android:background="@null"
             android:padding="10dp"
             />
     </RelativeLayout>
</RelativeLayout>