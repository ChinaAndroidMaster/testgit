<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/reg_setpwd_layout_oldpwd"
                android:layout_width="match_parent"
                android:layout_height="48.0dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/bg_input_top"
                android:paddingLeft="15.5dp"
                android:paddingRight="15.5dp"
                android:visibility="gone" >

                <EditText
                    android:id="@+id/reg_setpwd_et_oldpwd"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="@color/transparent"
                    android:hint="当前密码"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48.0dp"
                android:layout_marginBottom="-1dp"
                android:background="@drawable/bg_input_top"
                android:paddingLeft="15.5dp"
                android:paddingRight="15.5dp" >

                <EditText
                    android:id="@+id/reg_setpwd_et_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:hint="设置密码"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="15sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48.0dp"
                android:layout_marginTop="-1dp"
                android:background="@drawable/bg_input_bottom"
                android:paddingLeft="15.5dp"
                android:paddingRight="15.5dp" >

                <EditText
                    android:id="@+id/reg_setpwd_et_repwd"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:background="#00000000"
                    android:hint="再次输入密码"
                    android:imeActionLabel="下一步"
                    android:inputType="textPassword"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textColor="@color/text_color"
                    android:textColorHint="@color/text_hint_color"
                    android:textSize="15sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>