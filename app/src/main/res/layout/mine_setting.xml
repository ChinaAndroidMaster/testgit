<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mine_main_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_mine_interval"
    android:scrollbars="none" >

    <LinearLayout
        android:id="@+id/mine_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <include
            android:id="@+id/headerLayout"
            layout="@layout/include_header" />

        <TextView
            android:id="@+id/firstdivider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_mine_divider" />
        <!-- 分割线 -->

        <TextView
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="10dp"
            android:background="@color/color_mine_divider" />

        <TextView
            android:id="@+id/mine_main_pwdreset_tv"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:drawableEnd="@drawable/mine_arrow_right"
            android:drawablePadding="10dp"
            android:drawableRight="@drawable/mine_arrow_right"
            android:gravity="center_vertical|start"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="@string/pwd_reset"
            android:textColor="@color/color_mine_name"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/senondDivider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_mine_divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp" >

            <TextView
                android:id="@+id/mine_main_aboutme"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:drawableEnd="@drawable/mine_arrow_right"
                android:drawablePadding="10dp"
                android:drawableRight="@drawable/mine_arrow_right"
                android:gravity="center_vertical|start"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/str_aboutus"
                android:textColor="@color/color_mine_name"
                android:textSize="16sp" />
            
        <ImageView
            android:id="@+id/mine_main_newversion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/icon_version_new1"
            android:visibility="visible" />
        </RelativeLayout>

        <TextView
            android:id="@+id/thirddivider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_mine_divider" />
        <!-- 分割线 -->

        <TextView
            android:id="@+id/fouthdivider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="60dp"
            android:background="@color/color_mine_divider" />

        <TextView
            android:id="@+id/mine_main_logout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/str_mine_logout"
            android:textColor="@color/color_mine_name"
            android:textSize="16sp" />
        <!-- 分割线 -->

        <TextView
            android:id="@+id/sixthdivider"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/color_mine_divider" />
    </LinearLayout>

</ScrollView>