<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="40dp"
    android:padding="3dp" >

    <TextView
        android:id="@+id/listitem_carorder_item_report_btn_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingBottom="3dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="3dp"
        android:text="@string/report_review"
        android:textColor="#25abff"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/listitem_carorder_item_report_cartype_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="150dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/listitem_carorder_item_report_state_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="7dp"
        android:layout_toEndOf="@id/listitem_carorder_item_report_cartype_tv"
        android:layout_toRightOf="@id/listitem_carorder_item_report_cartype_tv"
        android:drawablePadding="3dp"
        android:drawableRight="@drawable/report_passed"
        android:text="@string/report_passed"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

</RelativeLayout>