<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="#ff3ab937"
                android:centerY="0.75"
                android:endColor="#ff3ab937"
                android:startColor="#ff3ab937" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="#ff3ab937"
                    android:centerY="0.75"
                    android:endColor="#ff3ab937"
                    android:startColor="#ff3ab937" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:endColor="#ff3a89a7"
                    android:startColor="#ff3a89a7" />
            </shape>
        </clip>
    </item>

</layer-list>